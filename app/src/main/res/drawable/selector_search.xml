<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- No Focus State -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:drawable="@mipmap/tab_sousuo_normal"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:drawable="@mipmap/tab_sousuo_pressed"/>
    <!-- Focus State -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:drawable="@mipmap/tab_sousuo_pressed"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:drawable="@mipmap/tab_sousuo_pressed"/>
    <!-- Pressed State -->
    <item android:state_selected="true" android:state_pressed="true"  android:drawable="@mipmap/tab_sousuo_pressed"/>
    <item  android:state_pressed="true"  android:drawable="@mipmap/tab_sousuo_pressed"/>
</selector>